<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/cardview_dark_background"
    android:padding="20dp">

    <RadioGroup
        android:id="@+id/grpType"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/rBtnIncome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Income"
            android:layout_weight="1"
            android:buttonTint="#b6f235"
            android:textColor="#b6f235"/>

        <RadioButton
            android:id="@+id/rBtnExpense"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Expense"
            android:layout_weight="1"
            android:buttonTint="#b6f235"
            android:textColor="#b6f235"/>
    </RadioGroup>

    <TextView
        android:id="@+id/typeError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select transaction type"
        android:gravity="center"
        android:textColor="#f23a3a"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Name"
        android:textColor="#b6f235"
        android:gravity="center_vertical"/>
    <EditText
        android:id="@+id/etTrnsName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#b6f235"
        android:textColor="#b6f235"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textColor="#b6f235"
        android:gravity="center_vertical"/>
    <EditText
        android:id="@+id/etTrnsAmount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#b6f235"
        android:textColor="#b6f235"
        android:textSize="16sp"
        android:inputType="numberDecimal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Description"
        android:textColor="#b6f235"
        android:gravity="center_vertical"/>
    <EditText
        android:id="@+id/etTrnsDescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#b6f235"
        android:textColor="#b6f235"
        android:textSize="16sp"/>



    <Spinner
        android:id="@+id/spnCategory"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="#b6f235"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/catError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select transaction category"
        android:gravity="center"
        android:textColor="#f23a3a"
        android:visibility="gone"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/etSaveTrns"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Save"
            android:gravity="center"
            android:textColor="#7df235"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/etCloseTrns"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Close"
            android:textColor="#f2dc35"
            android:gravity="center"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>